<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mergedLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageAdmFragment">

    <!-- Input Section: Adm management form in a ScrollView -->
    <ScrollView
        android:id="@+id/scrollViewInputs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp">


        <LinearLayout
            android:id="@+id/inputsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Adm First Name -->
            <EditText
                android:id="@+id/editTextAdmFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name" />

            <!-- Adm Last Name -->
            <EditText
                android:id="@+id/editTextAdmLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:layout_marginTop="8dp" />

            <!-- Adm Email -->
            <EditText
                android:id="@+id/editTextAdmEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="8dp" />

            <!-- Adm Phone -->
            <EditText
                android:id="@+id/editTextAdmPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:layout_marginTop="8dp" />

            <!-- Adm DOB -->
            <EditText
                android:id="@+id/editTextAdmDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DOB (YYYY-MM-DD)"
                android:inputType="date"
                android:layout_marginTop="8dp" />

            <!-- Adm Password -->
            <EditText
                android:id="@+id/editTextAdmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="8dp" />

            <!-- Adm Confirm Password -->
            <EditText
                android:id="@+id/editTextAdmConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_marginTop="8dp" />

            <!-- Buttons Container: Add, Update, Delete -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonAddAdm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add Adm"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonUpdateAdm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Update Adm"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonDeleteAdm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Delete Adm"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- RecyclerView to display existing Adm records -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/scrollViewInputs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_user" />

</androidx.constraintlayout.widget.ConstraintLayout>
