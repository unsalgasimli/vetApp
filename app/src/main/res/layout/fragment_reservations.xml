<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_reservation_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Filtering Section as a nested LinearLayout -->


        <!-- Reservation Type Filter -->
        <Spinner
            android:id="@+id/spinnerFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.02"
            android:prompt="@string/filter_by_type"
            android:layout_marginTop="20dp" />

        <!-- Date Range Filters -->
        <EditText
            android:id="@+id/etFromDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="From Date"
            app:layout_constraintStart_toEndOf="@+id/spinnerFilter"
            app:layout_constraintTop_toTopOf="@+id/spinnerFilter"
            />

        <EditText
            android:id="@+id/etToDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="To Date"
            app:layout_constraintStart_toEndOf="@+id/etFromDate"
            app:layout_constraintTop_toTopOf="@+id/etFromDate"
             />

        <!-- Pet Filter -->
        <Spinner
            android:id="@+id/spinnerPetFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:prompt="@string/filter_by_pet"
            app:layout_constraintStart_toEndOf="@+id/etToDate"
            app:layout_constraintTop_toTopOf="@+id/etToDate"
            />


    <!-- RecyclerView for displaying filtered reservations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReservations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@+id/spinnerPetFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- Floating Action Button for adding appointment -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reservation"
        android:contentDescription="Add Appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Floating Action Button for adding prescription -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddPrescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pet"
        android:contentDescription="Add Prescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
